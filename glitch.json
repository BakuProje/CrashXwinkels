{
    "install": "npm install",
    "start": "node kuzu.js",
    "watch": {
      "ignore": [
        "\\.git",
        "node_modules/**/node_modules",
        "session/*"
      ],
      "install": {
        "include": [
          "^package\\.json$"
        ]
      },
      "restart": {
        "include": [
          "\\.js$",
          "\\.json"
        ]
      },
      "throttle": 1000
    }
  }